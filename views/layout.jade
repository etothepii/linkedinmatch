doctype html
html
  head
    title Who is better at ...?
    link(rel='icon', href='/images/logo38.png', type='image/png')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
    script(src='/javascripts/bootstrap.min.js')
  body
    header(class='navbar navbar-inverse navbar-fixed-top')  
      nav.navbar-inverse
        div.container
          div.navbar-header
            a.navbar-brand whoisbetter.at
          div(class='collapse navbar-collapse')
            ul(class='nav navbar-nav navbar-right') 
              - if (!user) {
                li 
                  a(href='auth/linkedin')
                    ='Log in'
              - }
              - else {
                li.dropdown
                  a.dropdown-toggle(href='#' data-toggle='dropdown')
                    ='Welcome ' + user.displayName + ' '
                    b.caret
                  ul.dropdown-menu
                    li
                      a(href='settings')
                        ='Account Settings'
                    li.divider        
                    li
                      a(href='logout')
                        ='Log out'
              - }
    div.container(style='margin-top:60px; margin-bottom:23px') 
      block content   
    
    footer(class='navbar-inverse navbar-fixed-bottom')  
      nav.navbar-inverse
        div.container
          p.legal-footer PairReview - 40 Westcott House, Canary Wharf, London, E14 0DG  
            
