
extends layout

block header
  h1 #{name}

block summary
  p PairReview - Pairwise comparison

block content
  div(class='panel panel-default')
    - if (!user) {
        div.panel-heading
          | Who we are
        div.panel-body
          | Gajusz Chmiel, Miroslav Paskov and James Robinson
    - }
    - else if (!comparisson) {
        div.panel-heading Error
        div.panel-body An error occured getting a comparisson
          a(href='/index') Try again?
    - }
    - else {
        div.panel-heading Who is better at
        div.panel-body 
          table.comparison
            tr
              td(colspan=3) 
                h1 #{comparisson.skill_name}?
            tr
              td(width=300) 
                h2 #{comparisson.left_name}
              td(width=100)
              td(width=300) 
                h2 #{comparisson.right_name}
            tr
              td 
                a(href='#{comparisson.returnHref + "1"}')
                  img(src='#{comparisson.left_url}')
              td     
                a(role="button" class="btn btn-primary btn-log roughly" 
        	  href='#{comparisson.returnHref + "0"}') Don't Know
              td 
                a(href='#{comparisson.returnHref + "-1"}')
                  img(src='#{comparisson.right_url}')
            tr
              td(colspan=2) 
                br
            tr
    - }
